<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.longjingtech.ljhotelandroidapp"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.CAPTURE_AUDIO_OUTPUT" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" >
    </supports-screens>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VODMediaPlayerActivity"
            android:label="@string/title_activity_vodmedia_player"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".VideoMenuActivity"
            android:label="@string/title_activity_video_menu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".MainmenuActivity"
            android:label="@string/title_activity_mainmenu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".LocalPlayerActivity"
            android:label="@string/title_activity_local_player" >
        </activity>
        <activity
            android:name=".EducationActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_education" >
        </activity>
        <activity
            android:name=".HotelServiceActivity"
            android:label="@string/title_activity_hotel_service"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".Mp3PlayerActivity"
            android:label="@string/title_activity_mp3_player" >
        </activity>
        <activity
            android:name=".SystemConfigActivity"
            android:label="@string/title_activity_system_config" >
        </activity>
        <activity
            android:name=".sysConfig.ChangeWebServerActivity"
            android:label="@string/title_activity_change_web_server" >
        </activity>
        <activity
            android:name=".sysConfig.ChangeVODServerActivity"
            android:label="@string/title_activity_change_vodserver" >
        </activity>
    </application>

</manifest>
